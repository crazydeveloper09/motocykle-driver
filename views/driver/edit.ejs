<%- include("../partials/header") %>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-blue" id="name"> 
                    <br>                           
                   Edytuj użytkownika
                   
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                    
                                    <form action="/driver/<%= driver._id %>?_method=PUT" method="post">
                                        
                                        <p class="info">Edytuj nazwę użytkownika</p>
                                        <input type="text" placeholder="Nazwa użytkownika" value="<%= driver.username %>" name="driver[username]" class="form-control">
                                        <br>
                                        <p class="info">Edytuj imię i nazwisko</p>
                                        <input type="text" name="driver[name]" value="<%= driver.name %>" placeholder="Imię i nazwisko" class="form-control">
                                        <br>
                                        <p class="info">Edytuj numer telefonu</p>
                                        <input type="text" name="driver[phone]" value="<%= driver.phone %>" placeholder="Numer telefonu" class="form-control">
                                        <br>
                                        <p class="info">Edytuj email</p>
                                        <input type="text" name="driver[email]" value="<%= driver.email %>" placeholder="Email" class="form-control">
                                        <br>
                                        
                                        <div class="d-inline">
                                            <input type="submit" value="Edytuj użytkownika" class="btn-blue">
                                            <input type="reset" value="Wyczyść" class="btn-blue">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>