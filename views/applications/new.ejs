<%- include("../partials/header") %>
<br>

<div class="container">
    <div class="row">
        <div class="col-lg-4 d-md-none d-lg-block" id="side">
            <%- include("../partials/side") %>
        </div>
        <div class="col-lg-8 col-md-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-blue" id="name">                            
                    Zapisy
                    <br>
                    <span class="school">Na najbliższe kursy</span>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12 text-center">
                                    
                                    <form action="/applications" method="POST">
                                        <p class="info text-left">Wpisz swoje imię i nazwisko</p>
                                        <input type="text" name="name" placeholder="Imię i nazwisko" class="form-control">
                                        <br>
                                        <p class="info text-left">Podaj numer telefonu</p>
                                        <input type="tel" name="phone" placeholder="Nr telefonu" class="form-control">
                                        <br>
                                        <p class="info text-left">Podaj adres email</p>
                                        <input type="email" name="email" placeholder="Adres email" class="form-control">
                                        <br>
                                        <p class="info text-left">Termin i miejsce, które wybrałeś</p>
                                        <select name="event" class="form-control" style="background: none;
                                        border: none;
                                        border-bottom: 1px solid black;
                                        color: black;
                                        font-family: 'Nunito', sans-serif;">
                                            <option value="<%= event._id %>"><%= event.city %>, <%= event.date %> godz. <%= event.time %> </option>
                                            
                                        </select>
                                        <br>
                                        <div class="d-inline">
                                            <input type="submit" value="Zapisz się!" class="btn-blue">
                                            <input type="reset" value="Wyczyść" class="btn-blue">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>