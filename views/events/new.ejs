<%- include("../partials/header") %>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-blue" id="name"> 
                    <br>                           
                   Dodaj termin do kursu
                   
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                    
                                    <form action="/courses/<%= course_id %>/events" method="post">
                                        <p class="info">Wybierz miasto</p>
                                        <select name="city" class="form-control" style="background: none;
                                        border: none;
                                        border-bottom: 1px solid black;
                                        color: black;
                                        font-family: 'Nunito', sans-serif;">
                                            <option>Wybierz miasto</option>
                                            <option>Głogów</option>
                                            <option>Wschowa</option>
                                           
                                            
                                        </select>
                                        <br>
                                        
                                        <p class="info">Wpisz/wybierz datę</p>
                                        <input type="date" name="date" placeholder="Data"  class="form-control">
                                        <br>
                                        <p class="info">Wpisz czas</p>
                                        <input type="time" name="time" placeholder="Czas" class="form-control">
                                        <br>
                                        
                                        <div class="d-inline">
                                            <input type="submit" value="Dodaj termin do kursu" class="btn-blue">
                                            <input type="reset" value="Wyczyść" class="btn-blue">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>