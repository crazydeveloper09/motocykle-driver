<%- include("../partials/header") %>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-blue" id="name"> 
                    <br>                           
                   Edytuj termin do kursu
                   
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                    
                                    <form action="/courses/<%= course_id %>/events/<%= event._id %>?_method=PUT" method="post">
                                        <p class="info">Edytuj miasto</p>
                                        <select name="event[city]" class="form-control" style="background: none;
                                        border: none;
                                        border-bottom: 1px solid black;
                                        color: black;
                                        font-family: 'Nunito', sans-serif;">
                                            <option><%= event.city %></option>
                                            <option>Edytuj miasto</option>
                                            <option>Głogów</option>
                                            <option>Wschowa</option>
                                           
                                            
                                        </select>
                                        <br>
                                        
                                        <p class="info">Edytuj datę</p>
                                        <input type="date" name="event[date]" value="<%= event.date %>" class="form-control">
                                        <br>
                                        <p class="info">Edytuj czas</p>
                                        <input type="time" name="event[time]" value="<%= event.time %>" class="form-control">
                                        <br>
                                        
                                        <div class="d-inline">
                                            <input type="submit" value="Edytuj termin do kursu" class="btn-blue">
                                            <input type="reset" value="Wyczyść" class="btn-blue">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

