<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 17%">
            <div id="form1">
                <a href="/courses/<%= course.category %>">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do strony kategorii <%= course.category %>
                </a>
                <h1 class="login">Dodaj cechę charakterystyczną kursu <%= course.category %></h1>
                <% if(error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>

                <form action="/courses/<%= course._id %>/characteristics" method="post">
                    <p class="username">Tekst cechy charakerystycznej</p>
                    <textarea name="text" id="textarea" placeholder="Tekst cechy charakerystycznej" class="form-control" required></textarea>
                    <br>

                    <input type="submit" value="Dodaj cechę charakterystyczną" class="btn btn-danger button btn-gradient">
                    <input type="reset" value="Wyczyść" class="btn btn-dark button btn-black">
                </form>
            </div>
        </div>
    </div>
</div>


</body>
</html>