<%- include("../partials/header") %>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-blue" id="name"> 
                    <br>                           
                   Edytuj galerię
                   
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                    
                                    <form action="/gallery/<%= gallery._id %>?_method=PUT" method="post">
                                        <p class="info">Wybierz,gdzie ma się znaleźć</p>
                                        <select name="gallery[type]" class="form-control" style="background: none;
                                        border: none;
                                        border-bottom: 1px solid black;
                                        color: black;
                                        font-family: 'Nunito', sans-serif;">
                                            <option><%= gallery.type %></option>
                                            <option value="car">Samochody</option>
                                            <option value="motorcycle">Motocykle</option>
                                            <option value="all">Na obydwu stronach</option>
                                          
                                            
                                        </select>
                                        <br>
                                        <p class="info">Edytuj nazwę galerii</p>
                                       
                                        <input type="text" name="gallery[title]" placeholder="Tytuł galerii" value="<%= gallery.title %>" class="form-control">
                                        <br>
                                        
                                        
                                        <div class="d-inline">
                                            <input type="submit" value="Edytuj galerię" class="btn-blue">
                                            <input type="reset" value="Wyczyść" class="btn-blue">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

