<%- include("../partials/headera") %>
<div class="col-lg-6 col-md-12" id="form">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12" style="margin-top: 12%">
            <div id="form1">
                <a href="/gallery">
                    <i class="fas fa-arrow-left"></i>
                    Wróć do podstrony Galeria
                </a>
                <h1 class="login">Dodaj galerię</h1>
                <% if(error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
                <% } %>

                <form action="/gallery" method="post" enctype="multipart/form-data">
                    <p class="username">Wybierz, gdzie ma się znaleźć</p>
                    <select name="type" class="form-control" required>
                        <option value="car">Samochody</option>
                        <option value="motorcycle">Motocykle</option>
                        <option value="all">Na obydwu stronach</option>


                    </select>
                    <br>
                    <p class="username">Wpisz nazwę galerii</p>

                    <input type="text" name="title" placeholder="Tytuł galerii" class="form-control" required>
                    <br>
                    <p class="username">Wybierz zdjęcie główne</p>
                    <input type="file" name="profile">
                    <br>
                    <br>
                    <input type="submit" value="Dodaj galerię" class="btn btn-danger button btn-gradient">
                    <input type="reset" value="Wyczyść" class="btn btn-dark button btn-black">
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>