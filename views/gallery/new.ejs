<%- include("../partials/header") %>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="background: #eeeeee">
                <div class="card-title text-center text-blue" id="name"> 
                    <br>                           
                   Dodaj galerię
                   
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                            <div class="col-lg-12">
                                    
                                    <form action="/gallery" method="post" enctype="multipart/form-data">
                                        <p class="info">Wybierz,gdzie ma się znaleźć</p>
                                        <select name="type" class="form-control" style="background: none;
                                        border: none;
                                        border-bottom: 1px solid black;
                                        color: black;
                                        font-family: 'Nunito', sans-serif;">
                                            <option value="car">Samochody</option>
                                            <option value="motorcycle">Motocykle</option>
                                            <option value="all">Na obydwu stronach</option>
                                          
                                            
                                        </select>
                                        <br>
                                        <p class="info">Wpisz nazwę galerii</p>
                                       
                                        <input type="text" name="title" placeholder="Tytuł galerii" class="form-control">
                                        <br>
                                        <p class="info">Wybierz zdjęcie główne</p>
                                        <input type="file" name="profile">
                                        <br>
                                        <br>
                                        <div class="d-inline">
                                            <input type="submit" value="Dodaj galerię" class="btn-blue">
                                            <input type="reset" value="Wyczyść" class="btn-blue">
                                        </div>
                                    </form>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

