<%- include("../partials/header") %>
<br>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <p class="text-center text-blue" id="name">Galeria</p>
        </div>
    </div>
    
        <% if(galleries.length ===0){ %>
            <div class="row">
                <div class="col-lg-4 d-md-none d-lg-block">
                    <%- include("../partials/side") %>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="alert alert-info">
                        Nie dodaliśmy jeszcze żadnej galerii
                    </div>
                </div>
            </div>
            
        <% } else { %>
            <div class="row">
                <div class="col-lg-4 d-md-none d-lg-block" id="side">
                    <%- include("../partials/side") %>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="row">
                        <% for(let i=0;i<galleries.length;i++){ %>
                            <div class="col-lg-6 col-sm-12" style="margin-top: 11px">
                                <div class="card" style="background: #eeeeee">
                                    <img src="<%= galleries[i].profile %>" alt="" class="card-img-top">
                                    <div class="card-title info text-blue">                            
                                        
                                        <br>
                                        <a href="/gallery/<%= galleries[i]._id %>" class="text-blue"><strong style="text-transform: uppercase;margin-left: 3%;"><%= galleries[i].title %></strong></a>
                                    </div>
                                    
                                </div>
                            </div>
                        <% } %>
                    </div>
                   
                </div>
                
            </div>
           
        <% } %>
        
   
        
    
</div>
<script>
    $("#gallery").addClass("active");
    if(/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
        $("#gallery").css("text-decoration", "underline");
    } else {
        $("#gallery").css("border-bottom", "1px solid white");
    }
</script>
<%- include("../partials/footer") %>